 <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <h1>HELLO JI</h1>
    <div class="main w-fill min-h-screen bg-zinc-900"> 
        <div class="form p-10 text-white">
            <form action="/create" method="post"><!--//action='/create' specifies where the data goes(on create)  --> 
                <!-- //post is used to submit data into file in the server -->
                <input class="block w-full rounded-md outline-none px-5 py-2 bg-zinc-800" type="text" placeholder="Title goes here" name="forms">
                <!-- //name identifies data to be submitted -->
                <textarea class ="block mt-2 w-full rounded-md outline-none px-5 py-2 bg-zinc-800" resize="none" placeholder="Write your task here" name="text"></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md " type ="submit" value="create task">
            </form>
        </div>
        <div class="task flex gap-3 flex-wrap">
            <%if(files.length>0){%>
            <%files.forEach(function(val){ %>
                <div class="task">
                    
                    <div class="task w-72 px-3 py-4 rounded-md bg-zinc-800 text-white">
                        <h1 class="text-white text-3xl tracking-tighter" ><%=val%></h1>
                         <!-- <a class="text-blue-500 inline-block mt-3"href="/file/<%=val%>">delete</a> -->
                         <a class="text-green-500 inline-block mt-3" href="/file/<%val%>">read more</a>
                    </div>
                </div>
                
                 
            <%})%>
            <%}else{%>
                <h3 class="text-zinc-600">notaskyet</h3>
            <%}%>
            
        </div>
       
       
    </div>
</body>
</html>